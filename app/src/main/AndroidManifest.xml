<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prjpro.com.daynote">

    <application
        android:name="prjpro.com.daynote.DNApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="prjpro.com.daynote.ui.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="prjpro.com.daynote.ui.EntryActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="prjpro.com.daynote.ui.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>
